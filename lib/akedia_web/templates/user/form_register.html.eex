<%= form_for @changeset, @action, [class: "form register"], fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="field">
    <%= label f, :name %>
    <%= text_input f, :name, class: "input" %>
    <%= error_tag f, :name %>
  </div>

  <div class="field">
    <%= label f, :username %>
    <%= text_input f, :username, class: "input" %>
    <%= error_tag f, :username %>
  </div>

  <%= inputs_for f, :credential, fn fc -> %>
    <div class="field">
      <%= label fc, :email %>
      <%= text_input fc, :email, class: "input" %>
      <%= error_tag fc, :email %>
    </div>

    <div class="field">
      <%= label fc, :password %>
      <%= password_input fc, :encrypted_password, class: "input" %>
      <%= error_tag fc, :encrypted_password %>
    </div>
  <% end %>

  <div class="field">
    <%= submit "Register", class: "button is-success" %>
  </div>
<% end %>
