<article class="story h-entry">
  <div class="intro" style="background-image: url('<%= image_url(List.first(@story.entity.images), :original) %>')">
    <h1 class="display-4 p-name"><%= @story.title %></h1>
  </div>

  <div class="content e-content">
    <%= to_html(@story) %>
  </div>
</article>

<%= if @logged_in do %>
  <%= link "Edit", to: Routes.story_path(@conn, :edit, @story), class: "btn btn-outline-primary" %>
<% end %>
