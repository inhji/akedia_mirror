<h1><%= @story.title %></h1>

<div class="story content">
  <%= raw(AkediaWeb.Markdown.to_html(@story)) %>
</div>

<%= for image <- @story.entity.images do %>
  <%= img(image) %>
<% end %>

<%= if @current_user do %>
  <%= link "Edit", to: Routes.story_path(@conn, :edit, @story), class: "btn btn-outline-primary" %>
<% end %>
