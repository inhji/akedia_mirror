<section class="profile">
   <%= render SharedView, "hcard.html", assigns %>
</section>

<%= if @logged_in do %>
<section>
	<%= render "post_form.html", assigns %>
</section>
<% end %>

<div class="columns is-desktop">
	<div class="column">
		<%= render "post_feed.html", assigns %>

		<%= if @total_pages != 1 do %>
			<%= pagination_links @page,
				previous: ~E(<span>←</span>),
				next: ~E(<span>→</span>)
			%>
		<% end %>
	</div>
</div>

